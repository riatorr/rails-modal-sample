<div class="page">
  <% if !notice.nil? %>
      <p id="notice"><%= notice %></p>
  <% end %>
  <h1>Accounts</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td><%= link_to account.name, account %></td>
          <td><%= mail_to account.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Account', new_account_path, {:remote => true, 'data-bs-toggle' =>  "modal", 'data-bs-target' => '#modal-window', class: 'btn btn-primary btn-lg modal-btn'} %>
  <%= render 'modal' %>
</div>