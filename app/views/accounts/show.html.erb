<div class=page>
	<% if !notice.nil? %>
	    <p id="notice"><%= notice %></p>
	<% end %>
  <h1>Account for <%= @account.name %></h1>
	<p>
	  <strong>Name:</strong>
	  <%= @account.name %>
	</p>
	<p>
	  <strong>Login:</strong>
	  <%= @account.login %>
	</p>
	<p>
	  <strong>Email:</strong>
	  <%= mail_to @account.email %>
	</p>
	<%= link_to 'Edit', edit_account_path(@account) %> |
	<%= link_to 'Destroy', @account, method: :delete, data: { confirm: 'Are you sure?' } %> |
	<%= link_to 'Accounts', accounts_path %>
</div>